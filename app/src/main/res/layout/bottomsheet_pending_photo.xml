<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Drag Handle (optional but nice) -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp"/>

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"/>

    <!-- Status Text -->
    <TextView
        android:layout_marginTop="12dp"
        android:text="Profile photo is under admin review"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Cancel Change -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelChange"
        android:layout_marginTop="16dp"
        android:text="Cancel Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Re-upload -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReupload"
        android:layout_marginTop="8dp"
        android:text="Re-upload Photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Close -->
    <TextView
        android:id="@+id/btnClose"
        android:layout_marginTop="12dp"
        android:text="Close"
        android:textColor="#1B263B"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
