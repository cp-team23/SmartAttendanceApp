<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE2EF">

    <!-- ===== Header ===== -->
    <LinearLayout
        android:id="@+id/headerProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1B263B"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ===== Profile Image with Edit Hint ===== -->
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp">


            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_temp"
                android:scaleType="centerCrop"
                android:background="@android:color/white"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/CircleImageView" />


            <ImageView
                android:id="@+id/tvPendingBadge"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:background="@drawable/bg_circle_primary"
                android:padding="6dp"
                android:src="@drawable/bg_pending_badge"
                app:tint="@color/primary_blue"
                android:visibility="gone"/>

            <!-- Camera / Edit Icon -->
            <ImageView
                android:id="@+id/imgCameraIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:background="@drawable/bg_circle_primary"
                android:padding="6dp"
                android:src="@drawable/ic_menu_photo"
                app:tint="@color/primary_blue" />
        </FrameLayout>


        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harmit Patel"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student ID : 11XXX111"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- ===== Info Card ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1B263B"
                android:layout_marginBottom="12dp"/>

            <!-- ROW : College Mail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College Mail "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1B263B"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="name.id@college.in"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#DDDDDD"/>

            <!-- ROW : Department -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1B263B"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Computer Engineering"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#DDDDDD"/>

            <!-- ROW : Semester -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1B263B"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="V"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#DDDDDD"/>

            <!-- ROW : Class -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1B263B"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CE X"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#DDDDDD"/>

            <!-- ROW : Batch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1B263B"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="X1"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- ===== Center Buttons ===== -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Change Password -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="150dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#1B263B"
            app:cornerRadius="14dp"
            app:strokeWidth="2dp"
            app:strokeColor="#1B263B"
            app:backgroundTint="@android:color/white"
            app:elevation="0dp" />

        <!-- Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:minWidth="150dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#1B263B"
            app:cornerRadius="14dp"
            app:strokeWidth="2dp"
            app:strokeColor="#1B263B"
            app:backgroundTint="@android:color/white"
            app:elevation="0dp" />

    </LinearLayout>


    <!-- ===== Bottom Navigation ===== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
