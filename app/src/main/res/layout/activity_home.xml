<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F7">

    <!-- ===== Header with Profile ===== -->
    <LinearLayout
        android:id="@+id/headerHome"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#1B263B"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TOP SPACE (pushes content down) -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Row for Image + Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearanceOverlay="@style/CircleImageView"/>


            <!-- Name -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harmit Patel"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>



    <!-- ===== QR ATTENDANCE CARD ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardQr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/headerHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="28dp">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/qr_img"
                app:tint="#1B263B"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarkAttendance"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Mark Attendance"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                app:backgroundTint="#1B263B"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== VIEW ATTENDANCE CARD ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardQr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="28dp">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/plot_img"
                app:tint="#1B263B"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAttendance"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="View Detailed Records"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                app:backgroundTint="#1B263B"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
